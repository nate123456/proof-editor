{
  "name": "Proof Editor Theme",
  "type": "light",
  "colors": {
    "editor.background": "#ffffff",
    "editor.foreground": "#333333"
  },
  "tokenColors": [
    {
      "name": "Proof Section Headers",
      "scope": "keyword.control.section.proof",
      "settings": {
        "foreground": "#AA00AA",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Statement IDs",
      "scope": "variable.name.statement.proof",
      "settings": {
        "foreground": "#0066CC",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Statement Content",
      "scope": [
        "string.quoted.double.statement-content.proof",
        "string.unquoted.statement-content.proof"
      ],
      "settings": {
        "foreground": "#00AA00"
      }
    },
    {
      "name": "Argument IDs",
      "scope": "entity.name.function.argument.proof",
      "settings": {
        "foreground": "#CC0000",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Tree IDs",
      "scope": "entity.name.class.tree.proof",
      "settings": {
        "foreground": "#FF6600",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Node IDs",
      "scope": "variable.name.node.proof",
      "settings": {
        "foreground": "#9900CC"
      }
    },
    {
      "name": "Ordered Set IDs",
      "scope": "variable.name.ordered-set.proof",
      "settings": {
        "foreground": "#FF6600",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Statement References",
      "scope": "variable.other.reference.proof",
      "settings": {
        "foreground": "#0066CC"
      }
    },
    {
      "name": "YAML Keys",
      "scope": [
        "variable.parameter.argument-property.proof",
        "variable.parameter.tree-property.proof", 
        "variable.parameter.node-property.proof",
        "variable.parameter.yaml-key.proof"
      ],
      "settings": {
        "foreground": "#666666"
      }
    },
    {
      "name": "Comments",
      "scope": "comment.line.number-sign.proof",
      "settings": {
        "foreground": "#999999",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Strings",
      "scope": [
        "string.quoted.double.proof",
        "string.quoted.single.proof"
      ],
      "settings": {
        "foreground": "#00AA00"
      }
    },
    {
      "name": "Numbers",
      "scope": "constant.numeric.proof",
      "settings": {
        "foreground": "#0066CC"
      }
    },
    {
      "name": "YAML Structure",
      "scope": [
        "punctuation.definition.sequence.begin.yaml",
        "punctuation.definition.sequence.end.yaml",
        "punctuation.definition.mapping.begin.yaml",
        "punctuation.definition.mapping.end.yaml",
        "punctuation.separator.sequence.yaml",
        "punctuation.definition.entry.yaml"
      ],
      "settings": {
        "foreground": "#333333"
      }
    },
    {
      "name": "YAML Anchors and Aliases",
      "scope": [
        "punctuation.definition.alias.yaml",
        "punctuation.definition.anchor.yaml"
      ],
      "settings": {
        "foreground": "#CC6600",
        "fontStyle": "italic"
      }
    }
  ]
}