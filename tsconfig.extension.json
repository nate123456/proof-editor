{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": false,
    "noEmit": false,
    "types": ["vscode", "node"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true
  },
  "include": [
    "src/extension/**/*.ts",
    "src/webview/**/*.ts",
    "src/parser/**/*.ts",
    "src/domain/**/*.ts"
  ],
  "exclude": ["node_modules", ".vscode-test", "src/contexts/**", "**/__tests__/**", "**/*.test.ts"]
}
